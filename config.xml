<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vtayur.madhvanama" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Madhvanama</name>
    <description>        
    </description>
    <author email="varuntayur@gmail.com" href="http://varuntayur.wordpress.com">
        
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<platform name="android">
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
		<icon src="res/icon36.png" density="ldpi" /> 
        <icon src="res/icon48.png" density="mdpi" />  
		<icon src="res/icon72.png" density="hdpi" /> 
		<icon src="res/icon96.png" density="xhdpi" /> 
		<icon src="res/icon144.png" density="xxhdpi" /> 
    </platform>
</widget>
